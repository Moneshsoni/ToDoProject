<h1>ToDo List</h1>
<%= render "form", demo: @demo %>
<table>
    <thead>
        <tr>   
            <th>Task</th>
        
            <th>Description</th>
          
            <th colspan = "10">Actions</th>   
        </tr>
    </thead>
    <tbody>
    <% @demos.each do |demo| %>
    <tr>
        <td>
            <%= demo.task %>
        </td>
        
        <td> 
            <%= demo.description %>
        </td> 

        <td> 
            <%= link_to "Update ToDo", demos_path(id: demo.id) %>
        </td>

        <td>
        <%= link_to "Delete", demo_path(demo), data: {
                                                 turbo_method: :delete,
                                                 turbo_confirm: "Are you sure?",
                                               } %>
            </td>
    </tr>
    <% end %>
    </tbody>
</table>

